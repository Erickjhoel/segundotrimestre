<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">

    <xs:element name="Polideportivo">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Alumnos">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Alumno" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="Nombre" type="xs:string" />
                                        <xs:element name="Apellido" type="xs:string" />
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="Actividades">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Actividad">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="Aerobic" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="NumeroDePlazas" type="xs:integer"/>
                                                    <xs:element name="PrecioActividad" type="xs:integer"/>
                                                    <xs:element name="Horario" type="xs:string"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                            
                                        <xs:element name="ArtesMarciales" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="NumeroDePlazas" type="xs:integer"/>
                                                    <xs:element name="PrecioActividad" type="xs:integer"/>
                                                    <xs:element name="Horario" type="xs:string"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                            
                                        <xs:element name="Natacion" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="NumeroDePlazas" type="xs:integer"/>
                                                    <xs:element name="PrecioActividad" type="xs:integer"/>
                                                    <xs:element name="Horario" type="xs:string"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                            
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
        
            
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
